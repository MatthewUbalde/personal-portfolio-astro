---
import { getCollection } from "astro:content";

import Layout from "../../../layouts/PageLayout.astro";
import Section from "../../../components/Section.astro";
import BadgeDisplay from "../../../components/BadgeDisplay.astro";
import SectionContainer from "../../../components/SectionContainer.astro";

const experiences = await getCollection("experiences");
const mobileExp = experiences.find((e) => e.id === "mobile")?.data;
---

<Layout
  title="Mobile"
  description="Have experience in Android Studio and React Native to create Android apps"
>
  <SectionContainer row class="justify-center">
    <Section noMargin textContent class="sm:w-1/3">
      <h1>Experience Summary</h1>
      <p>
        Was taught how to use both Android Studio and React Native to develop
        mobile applications. Due to my experience as a web developer, my skills
        were transferable in React Native.
      </p>
    </Section>
    {
      mobileExp && (
        <BadgeDisplay
          noMargin
          class="flex-grow"
          title="Mobile Experiences"
          src={mobileExp}
        />
      )
    }
  </SectionContainer>
