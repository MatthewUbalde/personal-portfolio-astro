---
import Layout from "../../../layouts/PageLayout.astro";
import Section from "../../../components/Section.astro";
import BadgeContainer from "../../../components/BadgeContainer.astro";

import { getCollection } from "astro:content";
import ProjectContainer from "../../../components/ProjectContainer.astro";

const experiences = await getCollection("experiences");
const projects = await getCollection("projects");
const mobileExp = experiences.find((e) => e.id === "mobile")?.data;
const mobileProj = projects.find((e) => e.id === "mobile")?.data;
---

<Layout
  title="Mobile"
  description="Matthew Ubalde mobile development portfolio. Have experience in Android Studio and React Native to create Android apps."
>
  <div class="flex flex-col sm:flex-row justify-between gap-8 m-8">
    <Section noMargin textContent class="sm:w-1/3">
      <h1>Experience Summary</h1>
      <p>
        Was taught how to use both Android Studio and React Native to develop
        mobile applications. Due to my experience as a web developer, my skills
        were transferable in React Native.
      </p>
    </Section>
    <Section noMargin class="flex-grow">
      <h1 class="text-center">Mobile Experiences</h1>
      {mobileExp && <BadgeContainer src={mobileExp} />}
    </Section>
  </div>
