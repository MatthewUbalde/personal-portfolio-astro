---
import { Image } from "astro:assets";
import type { ExperienceShowcase } from "../const";

// type Props = ExperienceShowcase;
interface Props {
  src: ExperienceShowcase;
}

// const { title, experience, alt, src } = Astro.props;
const { src } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center bg-gray-800 p-4 rounded-lg
          hover:scale-105 transition-transform"
>
  <Image src={src.src} alt={src.alt} width={150} height={150} />
  <h2>{src.title}</h2>
  <h3 class="text-xl">{src.experience}</h3>
</div>
