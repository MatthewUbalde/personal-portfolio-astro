---
import { Image } from "astro:assets";
import type { ExperienceBadgeType } from "../types";

import { icons } from "../assets/globs";

type Props = ExperienceBadgeType;

const { title, src, alt, experience } = Astro.props;
if (!icons[src]) throw new Error(`"${src} does not exist in glob", ${icons}`);
---

<div
  class="group flex flex-col justify-around items-center min-w-24 max-w-36 bg-cyan-900 p-4 rounded-md
          hover:scale-110 transition-transform"
>
  <Image
    class="flex-grow min-h-12 max-h-24 min-w-12 max-w-24"
    src={icons[src]()}
    alt={alt}
    width={128}
    height={128}
    decoding="async"
    loading="lazy"
  />
  <div>
    <h2 class="text-center text-xl break-words">{title}</h2>
    <div class="w-fit px-1 mx-auto text-center text-sm bg-cyan-950 rounded-md">
      {experience}
    </div>
  </div>
</div>
