---
import { Image } from "astro:assets";
import type { ExperienceBadgeType } from "../const";

interface Props {
  src: ExperienceBadgeType;
}

const { src } = Astro.props;
---

<div
  class="group flex flex-col justify-around items-center bg-cyan-900 min-w-32 min-h-32 p-4 rounded-md
          hover:scale-110 transition-transform"
>
  <Image
    class="flex-grow max-h-24 max-w-24"
    src={src.src}
    alt={src.alt}
    width={100}
    height={100}
    decoding="async"
    loading="eager"
  />
  <div>
    <h2 class="text-center text-xl">{src.title}</h2>
    <div class="w-fit px-1 mx-auto text-center text-sm bg-cyan-950 rounded-md">
      {src.experience}
    </div>
  </div>
</div>
