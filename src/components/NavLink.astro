---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: className, href, ...props } = Astro.props;
---

<a
  class:list={[
    className,
    "min-w-96 max-w-96 w-fit h-fit p-6 text-white text-4xl",
    "bg-gradient-to-r from-black to-transparent bg-transparent hover:bg-blue-800 transition-colors",
  ]}
  href={href}
  {...props}
>
  <slot />
</a>
