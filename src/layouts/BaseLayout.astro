---
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";

import NavbarDesktop from "../components/Navbar/NavbarDesktop.astro";
import NavbarMobile from "../components/Navbar/NavbarMobile.astro";

const pathname = Astro.url.pathname;
const currentPath = pathname;

interface Props {
  prevNav?: string;
  title: string;
  description: string;
}

const { title, description, prevNav } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={"Matthew Ubalde | " + title} description={description} />
  </head>
  <body
    class="h-fit overflow-x-hidden bg-indigo-500 bg-gradient-to-b from-indigo-500 via-purple-400 to-indigo-500 text-cyan-50"
  >
    <NavbarMobile prev={prevNav} current={currentPath} class="sm:hidden" />
    <div class="grid sm:grid-cols-4 grid-rows-5 ml-12 sm:m-0">
      <NavbarDesktop
        prev={prevNav}
        current={currentPath}
        class="hidden sm:block col-span-1 row-span-5"
      />
      <main class="col-span-3 row-span-4">
        <slot />
      </main>
      <Footer class="col-span-3 row-span-1" />
    </div>
  </body>
</html>
